<Page x:Class="WpfAppPythone.Pages.MarketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WpfAppPythone.Pages"
      xmlns:templates="clr-namespace:WpfAppPythone.Templates"
      xmlns:views="clr-namespace:WpfAppPythone.ViewModels"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MarketPage">

    <Page.DataContext>
        <views:MarketViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1"  >
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate >
                    <DataTemplate>
                        <!--пока будет так, надо посмотреть в ToolKit более удобные компоненты-->
                        <Button
                            BorderThickness="0"
                            Content="{Binding Name}"
                            Style="{StaticResource MaterialDesignPaperLightButton}" Margin="10"
                            Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding Id}"/>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Border>
        <!--<materialDesign:Card HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10">

                            <StackPanel Orientation="Vertical" Margin="10">
                                
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </materialDesign:Card>-->
        <DockPanel Grid.Row="0" Grid.Column="1"  >
            <StackPanel Orientation="Vertical" DockPanel.Dock="Top">

                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="10,50,10,0" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Description}"  FontSize="20" Margin="10,10,10,0" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Cost}"  FontSize="20" FontWeight="Bold" Margin="10,50,10,0" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CountItems}"  FontSize="20" Margin="10,10,10,0" TextWrapping="Wrap"/>
            </StackPanel>
            <Button Content="Купить" Margin="15,50,15,0" Command="{Binding BuyItemCommand}" DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Page>
