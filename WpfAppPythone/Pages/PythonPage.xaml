<Page x:Class="WpfAppPythone.Pages.PythonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WpfAppPythone.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PythonPage">
    <WrapPanel Orientation="Vertical" Margin="20">
        <TextBlock Text="На вашем ПК не найден Python" 
               FontSize="22" 
               FontWeight="Bold"
               Foreground="#D32F2F"
               TextAlignment="Center"
               Margin="0,0,0,15"/>

        <TextBlock Text="Для работы с обучающей программой необходимо установить Python" 
               FontSize="14"
               TextWrapping="Wrap"
               Margin="0,0,0,10"
               TextAlignment="Center"
               Foreground="#555555"
               MaxWidth="400"/>

        <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                Margin="0,10,0,20">
            <Button Content="Скачать Python" 
                Padding="15,8"
                FontSize="14"
                Background="#1976D2"
                Foreground="White"
                Cursor="Hand"
                Click="OnDownloadPythonClick"
                Margin="0,0,10,0"/>

            <Button Content="Проверить снова" 
                Padding="15,8"
                FontSize="14"
                Background="#757575"
                Foreground="White"
                Cursor="Hand"
                Click="OnRetryCheckClick"/>
        </StackPanel>

        <Border Background="#FFF8E1" 
            Padding="15" 
            CornerRadius="8"
            BorderThickness="1"
            BorderBrush="#FFD54F"
            MaxWidth="500">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Рекомендации:" 
                       FontWeight="Bold" 
                       FontSize="14"
                       Foreground="#E65100"
                       Margin="0,0,0,5"/>
                <TextBlock Text="• Скачайте Python с официального сайта python.org" 
                       FontSize="12"
                       Margin="5,0,0,2"/>
                <TextBlock Text="• При установке не забудьте отметить 'Add Python to PATH'" 
                       FontSize="12"
                       Margin="5,0,0,2"/>
                <TextBlock Text="• После установки перезапустите программу" 
                       FontSize="12"
                       Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
    </WrapPanel>
</Page>
