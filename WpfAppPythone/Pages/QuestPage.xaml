<Page x:Class="WpfAppPythone.Pages.QuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPythone.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:templates="clr-namespace:WpfAppPythone.Templates"
      xmlns:viewModels="clr-namespace:WpfAppPythone.ViewModels"
      xmlns:coverters="clr-namespace:WpfAppPythone.Converters"
      xmlns:enums="clr-namespace:WpfAppPythone.AppData.Models.Enums"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="QuestPage">
    <Page.DataContext>
        <viewModels:QuestViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <coverters:QuestConverter x:Key="QuestConverter"/>
            <coverters:IsQuestConverter x:Key="IsQuestConverter"/>
            <coverters:DescriptionConverter x:Key="DescriptionConverter"/>
            <coverters:NumberConverter x:Key="NumberConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer  >
        <ContentControl>
            <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel 
                    Grid.Column="0"
                    Grid.Row="0"
                HorizontalAlignment="Center" 
            VerticalAlignment="Center"
                    Orientation="Vertical" >
            <TextBlock TextWrapping="Wrap" Text="{Binding NameSection}" Margin="10"  FontWeight="Bold" FontSize="22"/>

            <ItemsControl ItemsSource="{Binding Questions}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <templates:QuestListSelector 
                            BackgroundQuest="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            OnSelect="{Binding DataContext.SelectQuestCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

    </StackPanel>


        <materialDesign:Card Margin="20" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
         


                    
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <Label Content="{Binding NameQuest}" Margin="10" FontWeight="Bold" FontSize="18"/>
                        <StackPanel Orientation="Vertical" x:Name="ContentDescription" >
                            <ItemsControl ItemsSource="{Binding DescriptionQuestArray}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock
                                                Visibility="{Binding ., Converter={StaticResource DescriptionConverter}, ConverterParameter={x:Static enums:DescriptionType.Header}}"
                                                Margin="10"  FontSize="16"
                                                TextWrapping="Wrap"
                                                FontWeight="Bold" Text="{Binding Value}"/>
                                            <TextBlock 
                                                Visibility="{Binding ., Converter={StaticResource DescriptionConverter}, ConverterParameter={x:Static enums:DescriptionType.Simple}}"
                                                Margin="10" FontSize="16" 
                                                TextWrapping="Wrap"
                                                Text="{Binding Value}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                     <Grid 
                        Margin="10,10,10,0"
                        Grid.Row="1" Cursor="">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50*"/>
                        </Grid.RowDefinitions>
                            <StackPanel 
                                Visibility="{Binding CountSupports, Converter={StaticResource NumberConverter}}"  
                                Margin="10" Grid.Row="0"
                                Grid.Column="0" Orientation="Vertical" 
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                             <StackPanel Orientation="Horizontal">
                                <Button Margin="10" 
                                    Content="Показать подсказки"
                                    Visibility="{Binding QTypeQuest, Converter={StaticResource IsQuestConverter}}"
                                    Command="{Binding VisibleSupportHintCommand}"/>
                                <Button Margin="10"
                                    Content="Показать ответ" 
                                    Visibility="{Binding QTypeQuest, Converter={StaticResource IsQuestConverter}}"
                                    Command="{Binding VisibleSupportAnswerCommand}" Cursor="Hand"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Support}" Margin="5" FontSize="18" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel
                           Margin="10"
                            Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"
                           Orientation="Vertical" Visibility="{Binding QTypeQuest, Converter={StaticResource IsQuestConverter}}">
                            <ItemsControl ItemsSource="{Binding OptionQuestArray}" 
                                Visibility="{Binding QTypeQuest, Converter={StaticResource QuestConverter}, ConverterParameter={x:Static enums:QuestType.CheckBoxBTN}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <templates:CheckBoxSelector OnSelect="{Binding DataContext.SelectOptionCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl ItemsSource="{Binding OptionQuestArray}"
                                Visibility="{Binding QTypeQuest, Converter={StaticResource QuestConverter}, ConverterParameter={x:Static enums:QuestType.RadioBTN}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <templates:RadioSelector OnSelect="{Binding DataContext.SelectOptionCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBox Height="200"
                                Text="{Binding PythonCode}"
                                 Visibility="{Binding QTypeQuest, Converter={StaticResource QuestConverter}, ConverterParameter={x:Static enums:QuestType.Code}}"
                                VerticalAlignment="Top"
                                materialDesign:HintAssist.Hint="For your python code"
                                AcceptsReturn="True"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </StackPanel>
                        <WrapPanel  Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">

                            <TextBlock Text="{Binding ResualtQuest}" TextWrapping="Wrap" FontSize="20" Foreground="{Binding ResualtForeground}"/>
                        </WrapPanel>
                   </Grid>
                  <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Button Content="Сохранить" Command="{Binding CheckAnswerCommand}" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>

        </materialDesign:Card>

            </Grid>
        </ContentControl>
    </ScrollViewer>
</Page>
