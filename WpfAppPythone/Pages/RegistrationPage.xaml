<Page x:Class="WpfAppPythone.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPythone.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewModels="clr-namespace:WpfAppPythone.ViewModels"
      xmlns:domain="clr-namespace:WpfAppPythone.Domain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">


    <Page.DataContext>
        <viewModels:AuthViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>








        <ScrollViewer x:Name="MainScrollViewer"
          Grid.Row="1"
          materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True" Grid.ColumnSpan="2"
          >
            <ContentControl Margin="16" >
                <StackPanel>
                    <Label 
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                        FontWeight="Bold"
                        FontSize="22"
                        Content="Регистрация"/>
                    <TextBox Name="Username"
                      Width="450"  
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      MaxLength="200"
                      Margin="10"
                      materialDesign:HintAssist.Hint="Логин"
                      materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                      materialDesign:TextFieldAssist.HasClearButton="True"
                      Style="{StaticResource MaterialDesignOutlinedTextBox}" Cursor="">
                        <TextBox.Text>
                            <Binding Path="UserName" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>

                    </TextBox>
                    <!--<TextBox Name="Password"
                      Width="450"  
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      MaxLength="200"
                          Margin="10"
                      materialDesign:HintAssist.Hint="Пароль"
                      materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                      materialDesign:TextFieldAssist.HasClearButton="True"
                      Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.Text>
                            <Binding Path="Password" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>-->
                    <PasswordBox
                        Width="450"  
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        PasswordChanged="PasswordField_PasswordChanged"
                        x:Name="PasswordField"
                        MaxLength="200"
                            Margin="10"
                        materialDesign:HintAssist.HelperText="Обязательное поле"
                        materialDesign:HintAssist.Hint="Password"
                        Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />
                    <StackPanel
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Orientation="Horizontal">
                        <Button 
                          Name="CreateUser"
                          Margin="10"
                          Content="Зарегестрироватся" Command="{Binding RegistrationCommand}"/>
                        <Button 
                          Margin="10"
                          Content="Вход" Command="{Binding GoToLoginCommand}"/>
                    </StackPanel>

                </StackPanel>

            </ContentControl>
        </ScrollViewer>

    </Grid>
</Page>
